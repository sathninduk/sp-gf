extends layout

block content
  h1 #{title}
  p 
    a(href="/") Home
    |  > 
    a(href="/admin/q-rounds") Gdrive

  a(href="/admin/add-gdrive" class="btn btn-primary" style="margin: 30px 0px 50px 0px; float: right;") + Add New Link
  table(class="table datatables" id="myTable")
    thead 
      tr
        th(style="text-align: center;") Username
        th(style="text-align: center;") Round 
        th(style="text-align: center;") Link
        th(style="text-align: center;") Actions
    tbody
      each val in gdrive
        tr
          td(style="text-align: left;") #{val.username} 
          td(style="text-align: center;") #{val.round} 
          td(style="text-align: left;") 
            a(href=val.link target="_blank") #{val.link}
          td(style="text-align: center;")  
            form(action="/admin/del-gdrive" method="post") 
              input(type="hidden" value=val.username name="username")
              input(type="hidden" value=val.round name="round")
              button(class="btn btn-danger" type="submit") Remove
      
  div(class="container" style="padding: 0px 10px 50px 10px;")
